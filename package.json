{
  "name": "cas-fee-projekt-1-belleri",
  "version": "1.0.0",
  "description": "Simple ToDo App with Node.js, Express, Handlebars, NeDB, Stylelint, Prettier, ESLint, HTML Validator",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "stylelint": "stylelint \"**/*.css\"",
    "w3c": "html-validator --file ./public/index.html  --verbose",
    "eslint": "eslint \"**/*.js\"",
    "all": "npm run w3c  && npm run eslint  && node -e \"console.log('npm run all completed')\""
  },
  "author": "Nicola Belleri",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "html-validator-cli": "^2.0.0",
    "prettier": "2.6.2",
    "stylelint": "^14.7.1",
    "stylelint-config-standard": "^25.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.1.4",
    "express": "^4.18.0",
    "express-handlebars": "^7.0.7",
    "moment": "^2.29.4",
    "nedb-promises": "^6.2.1"
  }
}
